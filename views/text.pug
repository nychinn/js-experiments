doctype 5
html(lang="en")
	head
		title Multiple Checkboxes

		style(type="text/css").
			body {
				font-family: Helvetica, Arial, sans-serif;
				background-color: #8DBDD1;
				background-image: url(https://unsplash.it/1920/1600?image=638);
				color: #333;
			}

			form {
				box-sizing: border-box;
				background-color: #fff;
				max-width: 500px;
				width: 100%;
				margin: 10% auto 0;
				padding: 10px 20px 30px;
				
				box-shadow: 
					1px 1px 0px #333,
					2px 2px 0px #333,
					3px 3px 0px #333,
					4px 4px 0px #333,
					5px 5px 0px #333,
					6px 6px 0px #333,
					7px 7px 0px #333,
					8px 8px 0px #333
					;
			}

			h1 {
				text-align: center;
				border-bottom: 5px solid #8DBDD1;
				padding-bottom: 10px;
				margin-bottom: 15px;
			}

			ul {
				list-style: none;
				padding: 0;
				margin: 0;
				border-radius: 5px;
			}

			.checklist-item {	
				border-bottom: 2px solid #ddd;
			}

			.checklist-item:last-child {
				border-bottom: 0;
			}

			.checklist-item::after {
				content: '';
				display: table;
				clear: both;
			}

			input[type="checkbox"] {
				float: left;
				height: 30px;
				width: 30px;
				margin-left: 10px;
				padding: 10px;
				box-sizing: border-box;
				display: inline-block;
			}

			input[type="checkbox"] + .note span {
				position: relative;
			}

			input[type="checkbox"] + .note span::after {
				content: '';
				height: 2px;
				background-color: rgba(0,0,0,0.5);
				width: 0%;
				display: inline-block;
				position: absolute;
				left: 0;
				top: 8px;
				transition: .2s ease-in-out;
			}

			input[type="checkbox"]:checked + .note span::after {
				width: 100%;
				transition: .2s ease-in-out;
			}

			.note {
				float: left;
				width: calc(100% - 50px);
				border-left: 2px solid #ddd;
				padding: 10px;
				box-sizing: border-box;
				-webkit-user-select: none;
				   -moz-user-select: none;
				    -ms-user-select: none;
				        user-select: none;
			}
			
			@media (min-width: 1280px) {
				body {
					background-size: cover;
				}
			}

	body 

		form(action="")
			h1 Multiple Checkboxes

			ul(class="checklist")
				each val, index in {1: 'Grocery Shopping', 2: 'Practice JavaScript', 3: 'Pack Luggage for Sydney', 4: 'Blender 3D Model Challenge', 5: 'Christmas Shopping', 6: 'Buy Optus Sim' }

					li(class="checklist-item")
						input(type="checkbox" id="checkbox"+val)
						label(for="checkbox1" class="note")
							span= val		

		script(type="text/javascript").
			// use constants for values that don't change
			const checkboxes = document.querySelectorAll('.checklist-item input[type="checkbox"]');
			const checkbox = document.querySelector('.checklist-item');

			// use let for values that will change
			let lastChecked;

			function clicked(e) {

				let inBetween = false;

				// check if shift key is pressed
				if ( e.shiftKey && this.checked ) {
					checkboxes.forEach(checkbox => {

						// reverse inBetween if conditions match
						if (checkbox === this || checkbox === lastChecked) {
							inBetween = !inBetween;
						}

						// make all inBetween checkboxes checked
						if ( inBetween ) {
							checkbox.checked = true;
						}
					})
				}

				lastChecked = this;
			}

			// event listeners
			checkboxes.forEach(checkbox => checkbox.addEventListener('click', clicked));